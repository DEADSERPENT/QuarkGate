{
  "realm": "quarkgate",
  "enabled": true,
  "sslRequired": "none",
  "roles": {
    "realm": [
      {
        "name": "user",
        "description": "Regular user role"
      },
      {
        "name": "admin",
        "description": "Administrator role"
      }
    ]
  },
  "clients": [
    {
      "clientId": "graphql-gateway",
      "enabled": true,
      "publicClient": true,
      "directAccessGrantsEnabled": true,
      "standardFlowEnabled": true,
      "redirectUris": [
        "http://localhost:8080/*",
        "http://localhost:5173/*"
      ],
      "webOrigins": [
        "http://localhost:8080",
        "http://localhost:5173"
      ],
      "defaultClientScopes": [
        "web-origins",
        "acr",
        "roles",
        "profile",
        "email"
      ],
      "optionalClientScopes": [
        "microprofile-jwt"
      ]
    }
  ],
  "users": [
    {
      "username": "testuser",
      "enabled": true,
      "email": "testuser@quarkgate.dev",
      "firstName": "Test",
      "lastName": "User",
      "credentials": [
        {
          "type": "password",
          "value": "test123",
          "temporary": false
        }
      ],
      "realmRoles": [
        "user"
      ]
    },
    {
      "username": "adminuser",
      "enabled": true,
      "email": "adminuser@quarkgate.dev",
      "firstName": "Admin",
      "lastName": "User",
      "credentials": [
        {
          "type": "password",
          "value": "admin123",
          "temporary": false
        }
      ],
      "realmRoles": [
        "user",
        "admin"
      ]
    }
  ]
}
